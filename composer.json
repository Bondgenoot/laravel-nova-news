{
    "name": "mennotempelaar/nova-news-resource-tool",
    "description": "A resource tool for Laravel Nova which adds content management features for managing news posts.",
    "license": "MIT",
    "version": "0.0.0",
    "keywords": [
        "laraval",
        "nova",
        "package",
        "resource",
        "tool",
        "news",
        "cms"
    ],
    "authors": [
        {
            "name": "Menno Tempelaar",
            "email": "men.tempelaar@gmail.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/nova": "^4.0",
        "marshmallow/nova-charcounted-fields": "^2.0",
        "advoor/nova-editor-js": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.5",
        "pestphp/pest": "^1.21",
        "spatie/laravel-ray": "^1.29",
        "pestphp/pest-plugin-faker": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "MennoTempelaar\\NovaNewsTool\\": "src",
            "MennoTempelaar\\NovaNewsTool\\Database\\Factories\\": "database/factories",
            "MennoTempelaar\\NovaNewsTool\\Database\\Seeders\\": "database/seeders"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MennoTempelaar\\NovaNewsTool\\Providers\\NewsServiceProvider",
                "MennoTempelaar\\NovaNewsTool\\Providers\\NewsEventsServiceProvider",
                "MennoTempelaar\\NovaNewsTool\\Providers\\NewsNovaServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MennoTempelaar\\NovaNewsTool\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php artisan vendor:publish --provider=\"Advoor\\NovaEditorJs\\FieldServiceProvider\""
        ]
    }
}
